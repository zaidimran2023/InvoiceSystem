@model InvoiceSystem.Models.InvoiceModel

<h1>Delete Invoice</h1>

<div>
    <h3>Are you sure you want to delete this invoice?</h3>
    <div>
        <strong>Customer Name:</strong> @Model.CustomerName <br />
        <strong>Amount:</strong> @Model.Amount <br />
        <strong>Invoice Date:</strong> @Model.InvoiceDate.ToString("MM/dd/yyyy") <br />
        <strong>Status:</strong> @Model.Status
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
