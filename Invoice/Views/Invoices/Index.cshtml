@model IEnumerable<InvoiceSystem.Models.InvoiceModel>

<h1>Invoices</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer Name</th>
            <th>Amount</th>
            <th>Invoice Date</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CustomerName</td>
                <td>@item.Amount</td>
                <td>@item.InvoiceDate.ToString("MM/dd/yyyy")</td>
                <td>@item.DueDate.ToString("MM/dd/yyyy")</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Invoices", new { id = item.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Invoices", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Invoices", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Invoices")" class="btn btn-primary">Create New Invoice</a>
